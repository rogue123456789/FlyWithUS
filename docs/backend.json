{
  "entities": {
    "Employee": {
      "title": "Employee",
      "type": "object",
      "description": "Represents an employee of the flight school.",
      "properties": {
        "name": {
          "type": "string",
          "description": "The full name of the employee."
        },
        "role": {
          "type": "string",
          "description": "The role of the employee.",
          "enum": [
            "Pilot",
            "Mechanic",
            "Admin"
          ]
        },
        "status": {
          "type": "string",
          "description": "The clock-in status of the employee.",
          "enum": [
            "Clocked In",
            "Clocked Out"
          ]
        },
        "lastClockIn": {
          "type": "string",
          "format": "date-time",
          "description": "The timestamp of the last clock-in."
        }
      },
      "required": [
        "name",
        "role",
        "status"
      ]
    },
    "WorkLog": {
      "title": "WorkLog",
      "type": "object",
      "description": "Represents an employee's time entry (check-in/check-out).",
      "properties": {
        "employeeId": {
          "type": "string",
          "description": "The ID of the employee."
        },
        "employeeName": {
          "type": "string",
          "description": "The name of the employee."
        },
        "date": {
          "type": "string",
          "format": "date-time",
          "description": "The date of the log."
        },
        "clockInTime": {
          "type": "string",
          "format": "date-time",
          "description": "The clock-in time."
        },
        "clockOutTime": {
          "type": "string",
          "format": "date-time",
          "description": "The clock-out time."
        },
        "duration": {
          "type": "number",
          "description": "The duration of the work session in milliseconds."
        }
      },
      "required": [
        "employeeId",
        "employeeName",
        "date",
        "clockInTime",
        "clockOutTime",
        "duration"
      ]
    },
    "Aircraft": {
      "title": "Aircraft",
      "type": "object",
      "description": "Represents an aircraft in the flight school's fleet.",
      "properties": {
        "name": {
          "type": "string",
          "description": "The name or model of the aircraft."
        },
        "totalHours": {
          "type": "number",
          "description": "The total flight hours of the aircraft."
        },
        "nextMaintenanceHours": {
          "type": "number",
          "description": "The hour counter for the next scheduled maintenance."
        },
        "engineCheckHours": {
          "type": "number",
          "description": "The hour interval for engine checks."
        },
        "generalCheckHours": {
          "type": "number",
          "description": "The hour interval for general checks."
        }
      },
      "required": [
        "name",
        "totalHours",
        "nextMaintenanceHours"
      ]
    },
    "FlightLog": {
      "title": "FlightLog",
      "type": "object",
      "description": "Represents a flight log entry.",
      "properties": {
        "pilotName": {
          "type": "string",
          "description": "The name of the pilot."
        },
        "planeId": {
          "type": "string",
          "description": "The ID of the aircraft."
        },
        "takeoffLocation": {
          "type": "string",
          "description": "The departure location."
        },
        "landingLocation": {
          "type": "string",
          "description": "The arrival location."
        },
        "flightDuration": {
          "type": "number",
          "description": "The duration of the flight in hours."
        },
        "flightReason": {
          "type": "string",
          "description": "The purpose of the flight."
        },
        "date": {
          "type": "string",
          "format": "date-time",
          "description": "The date of the flight."
        }
      },
      "required": [
        "pilotName",
        "planeId",
        "takeoffLocation",
        "landingLocation",
        "flightDuration",
        "flightReason",
        "date"
      ]
    },
    "FuelLog": {
      "title": "FuelLog",
      "type": "object",
      "description": "Represents a record of fuel consumption.",
      "properties": {
        "customerType": {
          "type": "string",
          "enum": [
            "Company",
            "External",
            "Refueling"
          ]
        },
        "planeId": {
          "type": "string"
        },
        "startQuantity": {
          "type": "number"
        },
        "liters": {
          "type": "number"
        },
        "leftOverQuantity": {
          "type": "number"
        },
        "date": {
          "type": "string",
          "format": "date-time"
        },
        "cost": {
          "type": "number"
        }
      },
      "required": [
        "customerType",
        "startQuantity",
        "liters",
        "leftOverQuantity",
        "date"
      ]
    },
    "AdminUser": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "AdminUser",
      "type": "object",
      "description": "Represents an admin user with access to the admin dashboard.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the AdminUser entity."
        },
        "username": {
          "type": "string",
          "description": "The username of the admin user."
        },
        "email": {
          "type": "string",
          "description": "The email of the admin user.",
          "format": "email"
        }
      },
      "required": [
        "id",
        "username",
        "email"
      ]
    },
    "OpenUser": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "OpenUser",
      "type": "object",
      "description": "Represents an open user with limited access.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the OpenUser entity."
        },
        "username": {
          "type": "string",
          "description": "The username of the open user."
        },
        "email": {
          "type": "string",
          "description": "The email of the open user.",
          "format": "email"
        }
      },
      "required": [
        "id",
        "username",
        "email"
      ]
    },
    "Logbook": {
      "title": "Logbook",
      "type": "object",
      "description": "Represents a machine or vehicle with a logbook.",
      "properties": {
        "name": {
          "type": "string"
        },
        "totalHours": {
          "type": "number"
        },
        "engineCheckHours": {
          "type": "number"
        },
        "generalCheckHours": {
          "type": "number"
        }
      },
      "required": [
        "name",
        "totalHours"
      ]
    },
    "LogbookEntry": {
      "title": "LogbookEntry",
      "type": "object",
      "description": "Represents a single logbook entry.",
      "properties": {
        "logbookId": {
          "type": "string"
        },
        "date": {
          "type": "string",
          "format": "date-time"
        },
        "startLocation": {
          "type": "string"
        },
        "endLocation": {
          "type": "string"
        },
        "duration": {
          "type": "number"
        },
        "reason": {
          "type": "string"
        },
        "batteryStatus": {
          "type": "string",
          "enum": [
            "OK",
            "Not OK"
          ]
        },
        "oilPressure": {
          "type": "number"
        },
        "oilTemp": {
          "type": "number"
        },
        "waterTemp": {
          "type": "number"
        }
      },
      "required": [
        "logbookId",
        "date",
        "duration",
        "reason",
        "batteryStatus"
      ]
    }
  },
  "auth": {
    "providers": [
      "password",
      "anonymous"
    ]
  },
  "firestore": {
    "structure": [
      {
        "path": "/employees/{employeeId}",
        "definition": {
          "entityName": "Employee",
          "schema": {
            "$ref": "#/backend/entities/Employee"
          },
          "description": "Stores employee information. Accessible to admins."
        }
      },
      {
        "path": "/work_logs/{workLogId}",
        "definition": {
          "entityName": "WorkLog",
          "schema": {
            "$ref": "#/backend/entities/WorkLog"
          },
          "description": "Stores work log entries. Accessible to admins."
        }
      },
      {
        "path": "/aircrafts/{aircraftId}",
        "definition": {
          "entityName": "Aircraft",
          "schema": {
            "$ref": "#/backend/entities/Aircraft"
          },
          "description": "Stores information about each aircraft. Accessible to admins and open users."
        }
      },
      {
        "path": "/flight_logs/{flightLogId}",
        "definition": {
          "entityName": "FlightLog",
          "schema": {
            "$ref": "#/backend/entities/FlightLog"
          },
          "description": "Stores flight log entries. Accessible to admins and open users."
        }
      },
      {
        "path": "/fuel_records/{fuelRecordId}",
        "definition": {
          "entityName": "FuelLog",
          "schema": {
            "$ref": "#/backend/entities/FuelLog"
          },
          "description": "Stores fuel records. Accessible to admins and open users."
        }
      },
      {
        "path": "/roles_admin/{adminUserId}",
        "definition": {
          "entityName": "AdminUser",
          "schema": {
            "$ref": "#/backend/entities/AdminUser"
          },
          "description": "Indicates that a user is an admin. Existence of a document grants admin privileges."
        }
      },
      {
        "path": "/roles_open/{openUserId}",
        "definition": {
          "entityName": "OpenUser",
          "schema": {
            "$ref": "#/backend/entities/OpenUser"
          },
          "description": "Indicates that a user is an open user. Existence of a document grants open user privileges."
        }
      },
      {
        "path": "/logbooks/{logbookId}",
        "definition": {
          "entityName": "Logbook",
          "schema": {
            "$ref": "#/backend/entities/Logbook"
          },
          "description": "Stores information about each machine/vehicle logbook."
        }
      },
      {
        "path": "/logbook_entries/{logbookEntryId}",
        "definition": {
          "entityName": "LogbookEntry",
          "schema": {
            "$ref": "#/backend/entities/LogbookEntry"
          },
          "description": "Stores individual logbook entries."
        }
      }
    ]
  }
}
